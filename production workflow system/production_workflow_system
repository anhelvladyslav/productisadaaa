#!/bin/bash

# Create root project folder
mkdir production-workflow-system
cd production-workflow-system || exit

# Create main subfolders
mkdir backend frontend docs

# Backend structure
mkdir -p backend/src/models backend/src/routes backend/src/controllers backend/src/middlewares backend/src/utils
mkdir backend/config backend/migrations

# Frontend structure
mkdir -p frontend/src/components frontend/src/pages frontend/src/api frontend/src/context
mkdir frontend/public

# Empty README files
touch README.md
touch docs/README.md

# Minimal backend model files (empty files for start)
touch backend/src/models/User.js
touch backend/src/models/Track.js
touch backend/src/models/TrackVersion.js
touch backend/src/models/Task.js
touch backend/src/models/Release.js
touch backend/src/models/DemoSubmission.js
touch backend/src/models/Label.js
touch backend/src/models/ActivityLog.js

# Create empty backend entry point
touch backend/src/app.js

echo "Project structure created!"
